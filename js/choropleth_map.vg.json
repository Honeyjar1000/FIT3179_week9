{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "Average Salary 2014",
  "width": 800,
  "height": 600,
  "data": {
    "url": "/js/ne_100_ms.json",
    "format": {"type": "topojson", "feature": "ne_110m_populated_places_simple"}
  },
  "transform": [
    {
      "lookup": "properties.name",
      "from": {
        "data": {
          "url": "/data/salaryData2.csv"
        },
        "key": "Country",
        "fields": ["Year_Gross_Salary"]
      }
    }
  ],
  "projection": {"type": "equirectangular"},
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "Salary",
      "type": "quantitative",
      "scale": { 
        "type": "threshold", 
        "domain": [10000, 100000, 500000], 
        "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#a63603"] 
      }
    },
    "tooltip": [
      {"field": "properties.name", "type": "nominal", "title": "Country"},
      {"field": "Year_Gross_Salary", "type": "quantitative"}
    ]
  }
}
