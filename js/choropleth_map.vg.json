{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "Average Salary 2014",
  "width": 800,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/Honeyjar1000/FIT3179/main/js/worldmap.topojson",
    "format": {
          "type": "topojson",
          "feature": "worldmap"
        }
  },
  "transform": [{
      "lookup": "properties.admin",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/Honeyjar1000/FIT3179/main/data/After_tax_plus_year_gross.csv"
        },
        "key": "Country",
        "fields": ["Year_Gross_Salary"]
      }
    },
    {"calculate": "datum.Year_Gross_Salary", "as": "Salary"}
  ],
  "projection": {
    "type": "equalEarth"
  },
  "mark": {
    "type": "geoshape"
    },
  "encoding": {
    "color": {
      "field": "Salary",
      "type": "quantitative"
    },
    "tooltip": [
      {"field": "Country", "type": "nominal", "title": "Country"},
      {"field": "Year_Gross_Salary", "type": "quantitative"}
    ]
  }

}
